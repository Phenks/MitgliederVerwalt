<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:MitgliederVerwaltung">
    <Style TargetType="{x:Type TextBlock}"  x:Key="BasisTextBlock" BasedOn="{StaticResource BaseTextBlockStyle}">
        <Setter Property="Foreground" Value="{StaticResource VordergrundBasisBrush}" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="HorizontalAlignment" Value="Center" />
    </Style>

    <Style TargetType="{x:Type TextBlock}"  x:Key="HeaderTextBlock" BasedOn="{StaticResource BasisTextBlock}">
        <Setter Property="FontSize" Value="23"></Setter>
        <Setter Property="FontWeight" Value="Bold"></Setter>
        <Setter Property="Foreground" Value="{StaticResource VordergrundSehrHellBrush}"></Setter>
    </Style>

    <Style TargetType="{x:Type TextBox}"  x:Key="BasisTextBox" BasedOn="{StaticResource BaseStyle}">
        <Setter Property="Foreground" Value="{StaticResource VordergrundBasisBrush}" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Margin" Value="4"></Setter>
    </Style>
</ResourceDictionary>